<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/rankingFragmentCountTextView"
    android:layout_width="0dp"
    android:layout_height="35dp"
    android:layout_weight="0.7"
    android:background="@drawable/ic_ranking1_black"
    android:fontFamily="@font/notosansmedium"
    android:gravity="center"
    android:textColor="@color/black"
    android:textSize="15dp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/rankingFragmentMapTitleTextView"
    style="@style/ListDetail"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:ellipsize="marquee"
    android:paddingStart="25dp"
    android:singleLine="true" />

  <TextView
    android:id="@+id/rankingFragmentDistanceTextView"
    style="@style/ListDetail"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:gravity="center" />

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1.5"
    android:gravity="start">
    <ImageView
      android:id="@+id/rankingFragmentModeImageView"
      style="@style/ListDetail"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      android:src="@drawable/ic_favorite_border_black_24dp"
      android:layout_gravity="center_vertical" />

    <TextView
      android:id="@+id/rankingFragmentModeTextView"
      style="@style/ListDetail"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:text="asd"/>
  </LinearLayout>
</LinearLayout>
